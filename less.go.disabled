package main

import (
  "github.com/kib357/less-go"
  "github.com/fatih/color"
  "strings"
)

func compileLess(from string) {
  to := strings.Replace(from, "sites", "public", 1)
  to = strings.Replace(to, "less", "css", 1)

  err := less.RenderFile(from, to, map[string]interface{}{"compress": true})

  if err != nil {
    color.Red("[ERROR]: %s\n", err)
  } else {
    color.Green("[LESS]: " + from + " => " + to + "\n")
  }
}
