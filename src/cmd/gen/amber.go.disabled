package main

import (
	"strings"

	"github.com/eknkc/amber"
)

// AmberProcessor : template wrapper for the amber library.
type AmberProcessor struct{}

func (p AmberProcessor) compile(tpl *TemplateWriter) error {
	compiler := amber.New()
	compiler.CompileData(tpl.buffer, nil, nil)

	return err
}

func (p AmberProcessor) dstfile(filename string) string {
	return strings.Replace(convertSrcToDestPath(filename), "amber", "html", 1)
}
